text "monthly sales"
dataset sales "Monthly Sales" {
    January: 450
    February: 620
    March: 380
    April: 790
    May: 890
}

# Render as different chart types
plot sales as bar
plot sales as line
plot sales as pie
plot sales as table
plot sales as histogram
plot sales as scatter

