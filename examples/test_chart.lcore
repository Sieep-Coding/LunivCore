# Exploratory Data Analysis Journal with LCore

text "Exploratory Analysis With LunivCore"

text "Process Data"

# Loading dataset with regional sales information
dataset regional_sales "Journal #1 Data (Sales $)" {
    Midwest: 1124
    Northeast: 2545
    West: 728
    South: 1954
    Texas: 1720
    California: 2140
}

text "First, we need to get some basic statistics."

# Statistical summary
sum regional_sales
avg regional_sales
min regional_sales
max regional_sales
count regional_sales

text "Now let us visualize the data distribution"

# Bar chart showing absolute sales values
plot regional_sales as bar

# Pie chart showing proportional distribution
plot regional_sales as pie

text "Analyzing regional performance"

# Line chart for comparative trend visualization
plot regional_sales as line

# Histogram for distribution analysis
plot regional_sales as histogram

text "Scatter plot showing individual regional values"

plot regional_sales as scatter

text "Key Findings"

# Table view for detailed reference
plot regional_sales as table

text "Conclusion"

# Additional dataset for comparison
dataset top_regions "Top Performing Regions" {
    California: 2140
    Northeast: 2545
}

text "Performance Leaders"

plot top_regions as bar